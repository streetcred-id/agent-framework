@model AcceptConnectionViewModel
@{
    ViewData["Title"] = "Create Invitation";
}
<h2>Accept Invitation</h2>
<p>
    Paste the connection invitation details
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AcceptInvitation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvitationDetails" class="control-label"></label>
                <input asp-for="InvitationDetails" class="form-control" />
                <span asp-validation-for="InvitationDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Accept Invitation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>